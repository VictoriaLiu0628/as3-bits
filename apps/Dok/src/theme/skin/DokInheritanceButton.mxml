<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009" height="29">
    
    <!-- host component -->
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
	<s:BitmapImage source="@Embed(source='theme/asset/class-btn.png', scaleGridLeft='10', scaleGridRight='64', scaleGridTop='0', scaleGridBottom='29')"
				   source.down="@Embed(source='theme/asset/class-btn-down.png', scaleGridLeft='10', scaleGridRight='62', scaleGridTop='0', scaleGridBottom='29')"
				   source.disabled="@Embed(source='theme/asset/class-btn-active.png', scaleGridLeft='10', scaleGridRight='72', scaleGridTop='0', scaleGridBottom='29')"
				   left="0" right="0" top="0" bottom="0" />
    
    <!-- layer 8: text -->
    <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
    <s:Label id="labelDisplay" color.disabled="#ffffff"
             textAlign="center"
             verticalAlign="middle"
             maxDisplayedLines="1"
             horizontalCenter="0" verticalCenter="1"
             left="14" right="12" top="2" bottom="2">
		<s:filters>
			<s:DropShadowFilter color="#000000" angle="90" distance="-1" blurX="0" blurY="0" />
		</s:filters>
    </s:Label>
    
</s:SparkSkin>
