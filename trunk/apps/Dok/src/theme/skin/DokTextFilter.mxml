<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5" blendMode="normal" height="24" xmlns:controls="net.tw.flex.spark.controls.*">
	<fx:Script>
		<![CDATA[
			import spark.events.TextOperationEvent;
		]]>
	</fx:Script>
	
	<s:creationComplete>
		<![CDATA[
			hostComponent.setStyle('focusAlpha', 0);
		]]>
	</s:creationComplete>

    <fx:Metadata>
    <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.TextInput")]
    ]]>
    </fx:Metadata> 
    
    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
    </s:states>
    
    <s:BitmapImage source="@Embed(source='theme/asset/text-filter.png', scaleGridLeft='16', scaleGridRight='360', scaleGridTop='0', scaleGridBottom='24')"
				   left="0" right="0" top="0" bottom="0"/>
    
    <!-- text -->
    <!--- @copy spark.components.supportClasses.SkinnableTextBase#textDisplay -->
    <s:RichEditableText id="textDisplay"
              verticalAlign="middle"
              left="10" right="22" top="1" bottom="1" />
	<controls:ButtonBitmapImage source="@Embed('theme/asset/clear.png')" visible="{hostComponent.text.length>0}" right="6" top="5">
		<controls:click>
			<![CDATA[
				textDisplay.text='';
				textDisplay.setFocus();
				hostComponent.dispatchEvent(new TextOperationEvent(TextOperationEvent.CHANGE));
			]]>
		</controls:click>
	</controls:ButtonBitmapImage>

</s:SparkSkin>